@model GNM.Models.Gateway
@{
    ViewBag.Title = "Gateway";
}

<div class="x_panel">
    <div class="x_title">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Gateway Master
                </h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    @using (Html.BeginForm("AddEditGateway", "Gateway"))
    {
        <div class="row">
            <div class="form-group center">
                <div class="col-md-4"></div>
                <div class="col-md-4" style="color:red;">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.GatewayId, new { id = "txtGatewayId" })
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.GatewayName, new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.GatewayName, new { id = "txtGatewayName", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GatewayName, "", new { @style = "color:red" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="item form-group">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <input type="submit" name="btnSubmit" id="btnSubmit" value="Save" class="btn btn-success submit">
                    <input type="button" name="btnCancel" id="btnCancel" value="Cancel" class="btn btn-primary submit">
                </div>

            </div>
        </div>
    }
</div>
@*    </div>*@
@section scripts {
    <script type="text/javascript">
        $('#btnCancel').click(function () {
            window.location.href = "/Gateway/Index";
        });

    </script>
}
